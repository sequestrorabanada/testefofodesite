<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Character Equipment</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background-color: #f0f0f0;
    }

    .character-container {
      position: relative;
      width: 300px;
      height: 400px;
    }

    .character {
      width: 100%;
      height: 100%;
      background: url('your-character-image.png') no-repeat center;
      background-size: contain;
    }

    .equipment-area {
      position: absolute;
      cursor: pointer;
    }

    .head {
      top: 20px;
      left: 110px;
      width: 80px;
      height: 80px;
    }

    .body {
      top: 110px;
      left: 100px;
      width: 100px;
      height: 120px;
    }

    .popup {
      position: absolute;
      background: rgba(0, 0, 0, 0.8);
      color: white;
      padding: 5px 10px;
      border-radius: 5px;
      display: none;
      z-index: 10;
      pointer-events: none;
    }
  </style>
</head>
<body>
  <div class="character-container">
    <div class="character"></div>

    <div class="equipment-area head" data-info="Helmet: Increases defense."></div>
    <div class="equipment-area body" data-info="Armor: Boosts resistance."></div>

    <div class="popup" id="popup"></div>
  </div>

  <script>
    const popup = document.getElementById('popup');
    const equipmentAreas = document.querySelectorAll('.equipment-area');

    equipmentAreas.forEach(area => {
      area.addEventListener('mouseenter', (e) => {
        popup.textContent = e.target.getAttribute('data-info');
        popup.style.display = 'block';
      });

      area.addEventListener('mousemove', (e) => {
        popup.style.left = e.pageX + 10 + 'px';
        popup.style.top = e.pageY + 10 + 'px';
      });

      area.addEventListener('mouseleave', () => {
        popup.style.display = 'none';
      });
    });
  </script>
</body>
</html>
